<mujoco model="simple_gripper_scene">
    <compiler angle="degree" coordinate="local"/>
    <option gravity="0 0 -9.81" integrator="RK4"/>

    <worldbody>
        <!-- Ground -->
        <geom name="floor" type="plane" pos="0 0 0" size="5 5 0.1" rgba="0.9 0.9 0.9 1"/>

        <!-- Block -->
        <body name="block" pos="0 0 0.05">
            <joint type="free" name="block_free"/>
            <geom type="box" size="0.05 0.05 0.05" rgba="0.2 0.6 0.9 1" mass="0.1" friction = "2.0"/>
        </body>

        <!-- Target -->
        <body name="target" pos="0 0 0.05">
            <joint type="free" name="target_free"/>
            <geom type="box" size="0.1 0.1 0.001" rgba="0 1 0 1" mass="0.1" friction = "2.0"/>
        </body>

        <!-- Gripper -->
        <body name="gripper" pos="0 0 0.3">
            <!-- sideways motion -->
            <joint name="gripper_leftright" type="slide" axis="1 0 0" range="-6 6" stiffness="20" damping="5"/>
            <joint name="gripper_forwardbackward" type="slide" axis="0 1 0" range="-6 6" stiffness="20" damping="5"/>
            <!-- vertical motion -->
            <joint name="gripper_updown" type="slide" axis="0 0 1" range="-1.0 0.0" stiffness="20" damping="5"/>

            <geom type="box" size="0.08 0.04 0.01" pos="0 0 0.1" mass="0.1" rgba="1 1 1 1"/>

            <!-- Left finger -->
            <body name="left_finger" pos="-0.06 0 0">
                <joint name="left_slide" type="slide" axis="1 0 0" limited="true" range="-0.05 0.1" stiffness="10" damping="5"/>
                <geom type="box" size="0.02 0.04 0.08" rgba="0.9 0.3 0.3 1" mass="0.1" friction = "1.0"/>
            </body>

            <!-- Right finger -->
            <body name="right_finger" pos="0.06 0 0">
                <joint name="right_slide" type="slide" axis="-1 0 0" limited="true" range="-0.05 0.1" stiffness="10" damping="5"/>
                <geom type="box" size="0.02 0.04 0.08" rgba="0.9 0.3 0.3 1" mass="0.1" friction = "1.0"/>
            </body>
        </body>
    </worldbody>

    <equality>
        <joint joint1="left_slide" joint2="right_slide"/>
    </equality>

    <actuator>
        <motor name = "up/down" joint="gripper_updown" ctrlrange="-15 15" ctrllimited="true"/>
        <motor name = "left/right" joint="gripper_leftright" ctrlrange="-10 10" ctrllimited="true"/>
        <motor name = "forward/backward" joint="gripper_forwardbackward" ctrlrange="-10 10" ctrllimited="true"/>

        <motor name = "finger" joint="left_slide" ctrlrange="-2 5" ctrllimited="true"/>
    </actuator>
</mujoco>
